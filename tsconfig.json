{
  "compilerOptions": {
    "target": "ES2017",
    "module": "node12",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "declaration": true,
    "rootDir": "./",
    "outDir": "./build",
    "strictNullChecks": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ]
}