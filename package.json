{
  "name": "japa",
  "version": "2.0.6",
  "description": "Lean test runner for Node.js",
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.js",
    "build/index.d.ts",
    "build/api.js",
    "build/api.d.ts"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "npm run test:win",
    "posttest": "npm run coverage",
    "commit": "git-cz",
    "prepublishOnly": "npm run build && pkg-ok",
    "test:win": "nyc mocha -r ts-node/register test/*.spec.ts",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && typedoc && node bin/postBuild.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thetutlage/japa.git"
  },
  "author": "virk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thetutlage/japa/issues"
  },
  "homepage": "https://github.com/thetutlage/japa#readme",
  "dependencies": {
    "chai": "^4.2.0",
    "chalk": "^2.4.1",
    "debug": "^4.1.0",
    "fast-glob": "^2.2.3",
    "is-ci": "^1.2.1",
    "ms": "^2.1.1",
    "ow": "^0.8.0",
    "retry": "^0.12.0",
    "right-pad": "^1.0.1",
    "time-span": "^2.0.0",
    "variable-diff": "^1.1.0"
  },
  "devDependencies": {
    "@adonisjs/mrm-preset": "^1.0.14",
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "commitizen": "^3.0.4",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^1.1.0",
    "mocha": "^5.2.0",
    "mrm": "^1.2.1",
    "nyc": "^13.1.0",
    "pkg-ok": "^2.3.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-external-module-name": "^1.1.3",
    "typedoc-plugin-single-line-tags": "^1.0.0",
    "typescript": "^3.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "test",
      "src/Reporter"
    ],
    "extension": [
      ".ts"
    ]
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "keywords": [
    "test",
    "test-runner"
  ]
}
